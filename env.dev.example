# ============================================================================
# Variables de Entorno - DESARROLLO
# ============================================================================
# Copiar este archivo a .env.dev y configurar los valores reales
# cp env.dev.example .env.dev
# nano .env.dev
# ============================================================================

# Entorno
NODE_ENV=development
APP_ENV=dev
PORT=3001
HOST=0.0.0.0

# ============================================================================
# APIs Externas
# ============================================================================

# ClickUp (REQUERIDO)
# En desarrollo puedes usar un token de prueba o el mismo
CLICKUP_API_TOKEN=pk_tu_token_de_clickup_dev

# Kajabi (REQUERIDO)
# En desarrollo puedes usar el mismo o un sandbox
KAJABI_CLIENT_ID=tu_client_id_dev
KAJABI_CLIENT_SECRET=tu_client_secret_dev

# Typeform (OPCIONAL)
TYPEFORM_API_TOKEN=tu_token_de_typeform_dev

# Cloudflare (OPCIONAL)
CLOUDFLARE_API_TOKEN=tu_api_token_de_cloudflare
CLOUDFLARE_ZONE_ID=tu_zone_id_de_cloudflare
# O alternativamente (método legacy):
CLOUDFLARE_EMAIL=tu_email@ejemplo.com
CLOUDFLARE_API_KEY=tu_api_key

# ============================================================================
# Google Workspace
# ============================================================================
GOOGLE_CLIENT_ID=tu_google_client_id
GOOGLE_CLIENT_SECRET=tu_google_client_secret
GOOGLE_REFRESH_TOKEN=tu_google_refresh_token
GOOGLE_REDIRECT_URI=https://dev.portal.pdeeugenihidalgo.org/oauth/callback
GOOGLE_SERVICE_ACCOUNT_KEY=tu_service_account_key_json
GOOGLE_SERVICE_ACCOUNT_IMPERSONATE=tu_email@dominio.com
GOOGLE_PROJECT_ID=tu_project_id
GOOGLE_WORKSPACE_DOMAIN=tu_dominio.com

# ============================================================================
# Google Drive - Transcripciones
# ============================================================================
GOOGLE_DRIVE_AUDIOS_FOLDER_ID=tu_folder_id_audios_dev
GOOGLE_DRIVE_TRANSCRIPCIONES_FOLDER_ID=tu_folder_id_transcripciones_dev
GOOGLE_DRIVE_CANALIZACIONES_FOLDER=tu_folder_canalizaciones_dev
DRIVE_MONITOR_INTERVAL=300000
DRIVE_WEBHOOK_AUTO_SETUP=false
WEBHOOK_BASE_URL=https://dev.portal.pdeeugenihidalgo.org
SERVER_URL=https://dev.portal.pdeeugenihidalgo.org

# ============================================================================
# SSH Servidor "dani" (Whisper)
# ============================================================================
SSH_DANI_HOST=tu_host_ssh
SSH_DANI_TAILSCALE_HOST=tu_tailscale_host
SSH_DANI_PORT=22
SSH_DANI_USER=tu_usuario
SSH_DANI_KEY_PATH=/ruta/a/tu/key.pem
SSH_DANI_INPUT_PATH=/ruta/input
SSH_DANI_OUTPUT_PATH=/ruta/output
SSH_DANI_PROYECTO_PATH=/ruta/proyecto
SSH_DANI_ENTORNO_VIRTUAL=/ruta/venv
SSH_DANI_MODELO_WHISPER=base
SSH_DANI_IDIOMA=es
SSH_DANI_FORMATO=json

# ============================================================================
# Seguridad
# ============================================================================
# En desarrollo puedes usar un secreto más simple (NO usar en producción)
COOKIE_SECRET=dev-secret-key-change-in-production
ADMIN_PASSWORD=dev_password

# ============================================================================
# Email
# ============================================================================
EMAIL_FROM=noreply-dev@portal.pdeeugenihidalgo.org















