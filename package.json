{
  "name": "auriportal-server",
  "version": "5.13.3",
  "description": "Portal de Aurelín - Sistema de gestión de estudiantes y rachas de práctica (Servidor Node.js)",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js",
    "build:css": "npx tailwindcss -i ./src/css/input.css -o ./public/css/tailwind.css --minify",
    "watch:css": "npx tailwindcss -i ./src/css/input.css -o ./public/css/tailwind.css --watch",
    "pm2:start": "pm2 start server.js --name aurelinportal",
    "pm2:stop": "pm2 stop aurelinportal",
    "pm2:restart": "pm2 restart aurelinportal",
    "pm2:logs": "pm2 logs aurelinportal",
    "transcripcion:forzar-todos": "node scripts/forzar-transcripcion-todos.js",
    "verificar-v4": "node scripts/verificar-v4.js",
    "audit:no-sqlite": "node scripts/audit-no-sqlite.js",
    "mcp:google-workspace": "node mcp-server/google-workspace.js",
    "mcp:test": "node mcp-server/test-connection.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:ci": "NODE_OPTIONS=--experimental-vm-modules jest --ci --coverage --maxWorkers=2"
  },
  "keywords": [
    "nodejs",
    "clickup",
    "kajabi",
    "education"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "@simonwep/pickr": "^1.9.1",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "busboy": "^1.6.0",
    "dotenv": "^16.4.5",
    "googleapis": "^144.0.0",
    "mailgun.js": "^11.0.0",
    "music-metadata": "^11.10.3",
    "node-cron": "^4.2.1",
    "node-fetch": "^2.7.0",
    "nodemailer": "^7.0.11",
    "pg": "^8.11.3",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "pm2": "^5.4.3",
    "tailwindcss": "^3.4.18"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
