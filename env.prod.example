# ============================================================================
# Variables de Entorno - PRODUCCIÓN
# ============================================================================
# Copiar este archivo a .env.prod y configurar los valores reales
# cp env.prod.example .env.prod
# nano .env.prod
# ============================================================================

# Entorno
NODE_ENV=production
APP_ENV=prod
PORT=3000
HOST=0.0.0.0

# ============================================================================
# APIs Externas
# ============================================================================

# ClickUp (REQUERIDO)
CLICKUP_API_TOKEN=pk_tu_token_de_clickup_produccion

# Kajabi (REQUERIDO)
KAJABI_CLIENT_ID=tu_client_id_produccion
KAJABI_CLIENT_SECRET=tu_client_secret_produccion

# Typeform (OPCIONAL)
TYPEFORM_API_TOKEN=tu_token_de_typeform_produccion

# Cloudflare (OPCIONAL - Requerido para purga automática de caché)
CLOUDFLARE_API_TOKEN=tu_api_token_de_cloudflare
CLOUDFLARE_ZONE_ID=tu_zone_id_de_cloudflare
# O alternativamente (método legacy):
CLOUDFLARE_EMAIL=tu_email@ejemplo.com
CLOUDFLARE_API_KEY=tu_api_key

# ============================================================================
# Google Workspace
# ============================================================================
GOOGLE_CLIENT_ID=tu_google_client_id
GOOGLE_CLIENT_SECRET=tu_google_client_secret
GOOGLE_REFRESH_TOKEN=tu_google_refresh_token
GOOGLE_REDIRECT_URI=https://portal.pdeeugenihidalgo.org/oauth/callback
GOOGLE_SERVICE_ACCOUNT_KEY=tu_service_account_key_json
GOOGLE_SERVICE_ACCOUNT_IMPERSONATE=tu_email@dominio.com
GOOGLE_PROJECT_ID=tu_project_id
GOOGLE_WORKSPACE_DOMAIN=tu_dominio.com

# ============================================================================
# Google Drive - Transcripciones
# ============================================================================
GOOGLE_DRIVE_AUDIOS_FOLDER_ID=tu_folder_id_audios
GOOGLE_DRIVE_TRANSCRIPCIONES_FOLDER_ID=tu_folder_id_transcripciones
GOOGLE_DRIVE_CANALIZACIONES_FOLDER=tu_folder_canalizaciones
DRIVE_MONITOR_INTERVAL=300000
DRIVE_WEBHOOK_AUTO_SETUP=true
WEBHOOK_BASE_URL=https://portal.pdeeugenihidalgo.org
SERVER_URL=https://portal.pdeeugenihidalgo.org

# ============================================================================
# SSH Servidor "dani" (Whisper)
# ============================================================================
SSH_DANI_HOST=tu_host_ssh
SSH_DANI_TAILSCALE_HOST=tu_tailscale_host
SSH_DANI_PORT=22
SSH_DANI_USER=tu_usuario
SSH_DANI_KEY_PATH=/ruta/a/tu/key.pem
SSH_DANI_INPUT_PATH=/ruta/input
SSH_DANI_OUTPUT_PATH=/ruta/output
SSH_DANI_PROYECTO_PATH=/ruta/proyecto
SSH_DANI_ENTORNO_VIRTUAL=/ruta/venv
SSH_DANI_MODELO_WHISPER=base
SSH_DANI_IDIOMA=es
SSH_DANI_FORMATO=json

# ============================================================================
# Seguridad
# ============================================================================
COOKIE_SECRET=GENERAR_SECRETO_ALEATORIO_FUERTE_AQUI
ADMIN_PASSWORD=tu_password_admin_seguro

# ============================================================================
# Email
# ============================================================================
EMAIL_FROM=noreply@portal.pdeeugenihidalgo.org
















